{
  "build": {
    "beforeDevCommand": "NODE_ENV=development yarn dev",
    "beforeBuildCommand": "NODE_ENV=production yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Tiempo",
    "version": "2.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Productivity",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.wilmerterrero.Tiempo",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "minimumSystemVersion": "12.3",
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "resources/**/*",
        "../extras/**/*"
      ],
      "shortDescription": "",
      "targets": "dmg"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/wilmerterrero/tiempo-app/releases/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDUyOUE4QjlFQjM3NjI0NDAKUldSQUpIYXpub3VhVXZtT2xheWZWSGJFT2JFbVRsQnYwZG5yOUxBUXNxc3VCR24xcm8rRjgyVDkK%"
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "fullscreen": false,
        "height": 450,
        "width": 450,
        "resizable": false,
        "title": "menubar",
        "visible": false,
        "hiddenTitle": true,
        "decorations": false,
        "focus": false,
        "transparent": true,
        "skipTaskbar": true,
        "alwaysOnTop": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  }
}